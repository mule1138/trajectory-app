{
    "compilerOptions": {
      "module": "amd",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "es6",
      "outDir": "app",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true
    },
    "include": [
      "./src/*", "src/main.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }