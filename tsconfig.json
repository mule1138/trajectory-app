{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "amd",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "outDir": "app",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "./app/*"
  ]
}